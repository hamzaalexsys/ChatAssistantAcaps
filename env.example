# Atlas-RAG Environment Configuration
# Copy this file to .env and fill in the values

# ===========================================
# LLM Inference Server
# ===========================================
# Option 1: Ollama (recommended for CPU, no GPU required)
VLLM_URL=http://localhost:11434/v1
VLLM_API_KEY=ollama
VLLM_MODEL=qwen2.5:7b
LLM_PROVIDER=ollama

# Option 2: vLLM (requires NVIDIA GPU)
# VLLM_URL=http://localhost:8000/v1
# VLLM_API_KEY=secret
# VLLM_MODEL=Qwen/Qwen2.5-7B-Instruct
# LLM_PROVIDER=vllm

# Option 3: OpenAI API
# VLLM_URL=https://api.openai.com/v1
# VLLM_API_KEY=sk-your-api-key
# VLLM_MODEL=gpt-4o-mini
# LLM_PROVIDER=openai

# Fallback: Return context-only response if LLM unavailable
LLM_FALLBACK_ENABLED=true

# ===========================================
# Qdrant Vector Database
# ===========================================
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=atlas_knowledge

# ===========================================
# Embedding Model
# ===========================================
EMBEDDING_MODEL=BAAI/bge-m3
EMBEDDING_DIMENSION=1024

# Reranker Model
RERANKER_MODEL=BAAI/bge-reranker-v2-m3

# ===========================================
# RAG Configuration
# ===========================================
# Note: BGE-M3 scores typically range 0.4-0.6
SIMILARITY_THRESHOLD=0.40
TOP_K_RESULTS=5
MAX_CONTEXT_LENGTH=8192

# Generation Settings
TEMPERATURE=0.0
MAX_TOKENS=1024

# ===========================================
# Security
# ===========================================
ENABLE_GUARDRAILS=true
LOG_LEVEL=INFO
DEBUG=false

# ===========================================
# Redis Cache (Atlas-Hyperion v3.0)
# ===========================================
REDIS_URL=redis://localhost:6379
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_SIMILARITY_THRESHOLD=0.95

# ===========================================
# NLI Verifier (Atlas-Hyperion v3.0)
# ===========================================
NLI_MODEL=cross-encoder/nli-deberta-v3-small
NLI_ENABLED=true
NLI_ENTAILMENT_THRESHOLD=0.7

